<!-- DOM functionality for the morse code dictionary -->
<script>
    function dict(){
        x = document.getElementById('letterDD').value; //take value of drop down list 
        morse = translator.func.text_to_morse(x, 'array');
        document.getElementById('answerDict').innerHTML = morse.join(' ') //present the transalation
    }
</script>



